<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sdk.pubmatic.com.javasample">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="sdk.pubmatic.com.javasample.MainActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sdk.pubmatic.com.javasample.BannerActivity"
            android:label="Banner"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout">
        </activity>
        <activity android:name="sdk.pubmatic.com.javasample.InterstitialActivity"
            android:label="Interstitial"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout">
        </activity>
        <activity android:name="sdk.pubmatic.com.javasample.VideoInterstitialActivity"
            android:label="Video Interstitial"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout">
        </activity>
        <activity android:name="sdk.pubmatic.com.javasample.InBannerVideoActivity"
            android:label="In-Banner Video"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout">
        </activity>
    </application>

</manifest>